{
	"name": "time2split/time2help",
	"description": "Utilities shared accross the time2split projects",
	"license": "MIT",
	"keywords": [
		"help",
		"utilities"
	],
	"autoload": {
		"psr-4": {
			"Time2Split\\Diff\\": "src/Diff",
			"Time2Split\\Help\\": "src",
			"Time2Split\\Help\\Tests\\": "tests"
		},
		"files": [
			"include/functions.php",
			"include/polyfill84-array.php"
		]
	},
	"require": {
		"php": ">=8.3"
	},
	"authors": [
		{
			"name": "Olivier Rodriguez (zuri)",
			"email": "zuri@time2split.net",
			"role": "Developer"
		}
	],
	"require-dev": {
		"phpunit/phpunit": "^12",
		"phpstan/phpstan": "^2.1",
		"phpdocumentor/shim": "^3.9"
	},
	"autoload-dev": {
		"psr-4": {}
	},
	"config": {
		"allow-plugins": {
			"phpdocumentor/shim": true
		}
	}
}